<!--top end-->
<article>
    <!--lbox begin-->
    <div class="lbox">
        <div class="whitebg lanmu">
            <h1>{{title}}</h1>
        </div>
        <div class="whitebg bloglist">
            <h2 class="htitle">最近更新</h2>
            <ul>
                {{#each list}}
                <li>
                    <div class="blogpic imgscale">
                        <a href="/detail/{{article_id}}" class="article-a">
                            <img src="{{thumbnail}}" alt="{{title}}">
                        </a>
                    </div>
                    <div class="infor">
                        <a href="/detail/{{article_id}}" class="article-a">
                            <h3 class="blogtitle">{{title}}</h3>
                            <p class="blogtext">{{ introduction }}</p>
                        </a>
                        <p class="bloginfo">
                            <span class="date">{{date}}</span>
                        </p>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
        <!--bloglist end-->
    </div>
    <div class="rbox">
        <div class="whitebg paihang">
            <h2 class="htitle">點擊排行榜</h2>
            <ul>
                {{#each clicks}}
                <li><i></i><a href="/detail/{{list_article_id}}">{{list_title}}</a></li>
                {{/each}}
            </ul>
        </div>
        <div class="whitebg tuijian">
            <h2 class="htitle">猜你喜歡</h2>
            <ul>
                {{#each loves}}
                <li>
                    <a href="/detail/{{list_article_id}}">
                        <i>
                            <img src="{{list_thumbnail}}">
                        </i>
                        <p>{{ list_title }}</p>
                    </a>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</article>