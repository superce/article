  <script>
    var url = location.pathname
    $('.nav a').each(function(index, item){
      var getUrl = $(this).attr('href')
      $(item).removeClass('active')
      if(getUrl === url){
        var nav = $(this).text()
        $('.wrap > .nav .active').text(nav)
        $(this).addClass('active')
      }
    })
  </script>
