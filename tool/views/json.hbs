<div class="page">
    <h5>JSON格式化</h5>
    <div class="panel">
        <form id="form1" class="form-horizontal" action="/" method="post">
            <div class="form-group">
                <div>
                    <textarea id="json_input" name="json_input" class="form-control" rows="17" style="max-height: 2222px;"
                        placeholder="请输入要格式化的Json字符串 或者 Url接口地址"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <input type="button" name="validate" id="validate" value="格式化（校验）" class="btn btn-success">
                    <input type="button" onclick="empty();" value="清空输入框" class="btn btn-danger">
                    <span id="copyallcode" class="btn btn-success" data-clipboard-target="#json_input">复制Json字符串</span>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <div class="alert alert-danger alert-dismissible text-left" role="alert" id="results">
                        请输入Json字符串 - Json在线解析的数据
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
{{> nav}}
<script src="/js/fileSave.js"></script>
<script src="/js/copy.min.js"></script>
<script src="/js/copy.js"></script>
<script src="/js/json.js"></script>